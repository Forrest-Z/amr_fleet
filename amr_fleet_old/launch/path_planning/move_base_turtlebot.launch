<?xml version="1.0"?>

<launch>
    <!-- Arguments -->
    <!--<arg name="cmd_vel_topic" default="/cmd_vel" />-->
    <!--<arg name="odom_topic" default="odom" />-->
    <arg name="move_forward_only" default="false"/>
    <arg name="robot_id" default="r1"/>


    <!-- move_base -->
    <group ns="$(arg robot_id)">
        <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
            <param name="tf_prefix" value="$(arg robot_id)" />
            <remap from="map" to="/map" />
            <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
            <rosparam file="$(find amr_fleet)/config/move_base/costmap_common_params_waffle.yaml" command="load" ns="global_costmap" />
            <rosparam file="$(find amr_fleet)/config/move_base/costmap_common_params_waffle.yaml" command="load" ns="local_costmap" />
            <rosparam file="$(find amr_fleet)/config/move_base/local_costmap_params.yaml" command="load" />
            <rosparam file="$(find amr_fleet)/config/move_base/global_costmap_params.yaml" command="load" />
            <rosparam file="$(find amr_fleet)/config/move_base/move_base_params.yaml" command="load" />
            <rosparam file="$(find amr_fleet)/config/move_base/dwa_local_planner_params_waffle.yaml" command="load" />
            <!--<remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>-->
            <!--<remap from="odom" to="$(arg odom_topic)"/>-->
            <param name="DWAPlannerROS/min_vel_x" value="0.0" if="$(arg move_forward_only)" />
        </node>
    </group>

    <group ns="$(arg robot_id)/move_base/global_costmap">
        <param name="global_frame" value="/map" />
        <param name="robot_base_frame" value="$(arg robot_id)/base_link" />
        <!--            <param name="obstacle_layer/frontHokuyo_laser_scan_sensor/sensor_frame" value="$(arg robot_id)/frontHokuyo"/>-->
    </group>

    <group ns="$(arg robot_id)/move_base/local_costmap">
        <param name="global_frame" value="/map" />
        <param name="robot_base_frame" value="$(arg robot_id)/base_link" />
        <!--            <param name="obstacle_layer/frontHokuyo_laser_scan_sensor/sensor_frame" value="$(arg robot_id)/frontHokuyo" />-->
    </group>

    <group ns="$(arg robot_id)/move_base/TebLocalPlannerROS">
        <param name="map_frame" value="$/map" />
    </group>



</launch>
